# API base URL
VITE_API_BASE_URL=/api

# Public DSN from your Sentry project (frontend only)
VITE_SENTRY_DSN=

# Environment name for Sentry (e.g., development, staging, production)
VITE_SENTRY_ENV=development

# Privacy: enable only in development by default; set to false in production
VITE_SENTRY_SEND_DEFAULT_PII=true

# Performance sampling overrides (0.0 - 1.0)
# Defaults: traces=0.2 (prod) / 1.0 (dev), replays=0.1 (prod) / 0.5 (dev)
VITE_SENTRY_TRACES_SAMPLE_RATE=
VITE_SENTRY_REPLAYS_SESSION_SAMPLE_RATE=
VITE_SENTRY_REPLAYS_ON_ERROR_SAMPLE_RATE=

# Used by the Sentry Vite plugin during builds to upload source maps
VITE_SENTRY_AUTH_TOKEN=

# Optional: ensure CI logs behavior (the plugin reads CI automatically)
# CI=true